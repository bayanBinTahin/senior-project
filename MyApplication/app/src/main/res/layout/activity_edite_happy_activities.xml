<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10pt"
    tools:context=".EditeHappyActivities">

    <LinearLayout
        android:id="@+id/happyActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/EditHappy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15pt"
            android:text="Edit Happy Activities"
            android:textAlignment="center"
            android:textColor="#2C77B3"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10pt"
            android:paddingTop="35pt"
            android:paddingEnd="10pt"
            android:paddingBottom="15pt"
            android:text="Which Activities make you happy?"
            android:textSize="24sp" />

        <CheckBox
            android:id="@+id/checkBoxEat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Eat ice cream"
            android:textColor="#757474"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBoxRead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Read a book"
            android:textColor="#757474"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBoxPicnic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Go in a picnic"
            android:textColor="#757474"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBoxMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Watch a movie"
            android:textColor="#757474"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBoxPlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Play video games"
            android:textColor="#757474"
            android:textSize="20sp" />

        <CheckBox
            android:id="@+id/checkBoxTalk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="Talk with a friends"
            android:textColor="#757474"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="150dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="150dp"
            android:paddingStart="10pt"
            android:paddingEnd="10pt"
            android:text="Save"
            android:textSize="20sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>