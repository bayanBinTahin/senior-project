<?xml version="1.0" encoding="UTF-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".Profile"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    -<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:layout_editor_absoluteY="1dp"
    tools:layout_editor_absoluteX="1dp"
    android:orientation="vertical">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="34sp"
        android:textColor="#2C77B3"
        android:textAlignment="center"
        android:text="User Name"
        android:paddingTop="30pt"
        android:id="@+id/Profile"/>

    <Button
        android:layout_height="60dp"
        android:layout_width="218dp"
        android:textSize="20sp"
        android:text="Edit Profile"
        android:id="@+id/buttonEditProfile"
        android:paddingEnd="10pt"
        android:paddingStart="10pt"
        android:layout_marginEnd="150dp"
        android:layout_marginTop="60dp"
        android:layout_marginStart="95dp"/>

    <Switch
        android:layout_height="158dp"
        android:layout_width="375dp"
        android:textSize="24sp"
        android:textColor="#807D7D"
        android:text="Turn On Notifications"
        android:paddingTop="50dp"
        android:id="@+id/switchNotification"
        android:paddingStart="50dp"/>

    <Switch
        android:layout_height="100dp"
        android:layout_width="375dp"
        android:textSize="24sp"
        android:textColor="#807D7D"
        android:text="Turn On scarf's LED's"
        android:paddingTop="50dp"
        android:id="@+id/switchLeds"
        android:paddingStart="50dp"/>

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>