<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <TextView
            android:id="@+id/textForgetYourPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:text="Forget your password?"
            android:textColor="#2C77B3"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textEnterYourEmailForgetPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:text="Please enter your email"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textEmailForgetPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Email:"
            android:textColor="#2C77B3"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextEmailForgetPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="#E8E6E6"
            android:ems="10"
            android:gravity="center"
            android:hint=""
            android:inputType="textEmailAddress"
            android:minHeight="48dp"
            android:paddingBottom="15dp"
            tools:ignore="SpeakableTextPresentCheck" />


        <Button
            android:id="@+id/buttonSendForgetPage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="#2C77B3"
            android:text="Send "
            android:textColor="#FFFFFF" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>