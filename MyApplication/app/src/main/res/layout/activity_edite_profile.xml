<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10pt"
    tools:context=".EditeProfile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="23dp">

        <TextView

            android:id="@+id/EditProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15pt"
            android:text="Edit Profile"
            android:textAlignment="center"
            android:textColor="#2C77B3"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textViewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20pt"
            android:paddingTop="40pt"
            android:text="Change passowrd"
            android:textAlignment="viewStart"
            android:textColor="#2C77B3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textViewEditHappy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20pt"
            android:paddingTop="20pt"
            android:text="Edit Happy Activities"
            android:textAlignment="viewStart"
            android:textColor="#2C77B3"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textVieweditrelax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20pt"
            android:paddingTop="20pt"
            android:text="Edit Relax Activities"
            android:textAlignment="viewStart"
            android:textColor="#2C77B3"
            android:textSize="24sp" />
        />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>